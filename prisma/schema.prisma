// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

model User {
  id                  Int                  @default(autoincrement()) @id
  email                String             @unique
  name               String?
  password            String
  lastSeen            DateTime           @default(now())
  isActive            Boolean            @default(true)
  phoneNumber         String?
  profile            Profile?
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  role                   Role              @default(USER)

 }


 model Profile {
  id             Int              @default(autoincrement()) @id
  bio            String?
  avatar         String?
  user           User             @relation(fields: [userId], references: [id])
  userId         Int             @unique
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
}


model Video {
  id             Int              @default(autoincrement()) @id
  title    String?
  description    String?
  videoId            String
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
}

model  Poster {
  id             Int              @default(autoincrement()) @id
  title    String?
  description    String?
  url            String
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
}


model Website {
  id             Int              @default(autoincrement()) @id
  title           String?
  headerTitle           String?
  headerPara           String?
  headerImg           String?
  aboutPage           String?
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
}


model Feature {
  id             Int              @default(autoincrement()) @id
  title    String?
  imageUrl            String?
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
}


model Contact {
   id             Int              @default(autoincrement()) @id
   name        String?
    value      String?
    
}